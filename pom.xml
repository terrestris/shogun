    <maven-site-plugin.version>3.12.0</maven-site-plugin.version>
    <jacoco-plugin.version>0.8.8</jacoco-plugin.version>
    <maven-project-info-reports-plugin.version>3.4.0</maven-project-info-reports-plugin.version>
    <jib-maven-plugin.version>3.2.1</jib-maven-plugin.version>

    <!-- Spring -->
    <spring-boot.version>2.6.7</spring-boot.version>
    <spring-data.version>2.5.6</spring-data.version>

    <jackson-bom.version>2.13.2.20220328</jackson-bom.version>

    <!-- Security -->
    <keycloak.version>18.0.2</keycloak.version>

    <!-- Database -->
